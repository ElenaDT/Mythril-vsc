{
  "name": "mythril-vsc",
  "displayName": "Mythril-VSC",
  "description": "Visual Studio Code extension to run Mythril analysis for Solidity files.",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/ElenaDT/Tesi_code.git"
  },
  "engines": {
    "vscode": "^1.89.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:extension.mythril-vsc.analyze"
  ],
  "main": "./src/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "mythril-vsc.analyze",
        "title": "Mythril-VSC: Analyze File",
        "icon": {
          "light": "./src/images/icons/mythril-audit-light.svg",
          "dark": "./src/images/icons/mythril-audit-dark.svg"
        }
      }
    ],
    "keybindings": [
      {
        "command": "mythril-vsc.analyze",
        "key": "ctrl+m",  
        "when": "editorTextFocus" 
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "mythril-vsc.analyze",
          "group": "commands",
          "title": "Mythril-VSC: Analyze File"
        }
      ],
      "editor/title": [
        {
          "command": "mythril-vsc.analyze",
          "when": "resourceLangId == solidity",
          "group": "navigation",
          "title": "Mythril-VSC: Analyze File"
        }
      ]
    },
    "configuration": {
      "title": "Mythril-VSC Extension Settings",
      "properties": {
        "mythril-vsc.executionTimeoutEnabled": {
            "type": "boolean",
            "default": false,
            "description": "Enable or disable the execution timeout for Mythril analysis."
        },
        "mythril-vsc.executionTimeout": {
            "type": "number",
            "default": 90,
            "description": "The execution timeout in seconds for Mythril analysis. Only applicable if Execution Timeout Enabled is true."
        },
        "mythril-vsc.useOpenZeppelin": {
        "type": "boolean",
        "default": true,
        "markdownDescription": "Choose whether to import OpenZeppelin contracts for Mythril analysis. This may slightly impact performance analysis."
        }
      }
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@eslint/js": "^9.8.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.89.0",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.3.9",
    "eslint": "^9.9.0",
    "globals": "^15.8.0",
    "typescript": "^5.4.5"
  }
}

