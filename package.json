{
  "name": "mythril-vsc",
  "displayName": "Mythril-VSC",
  "description": "Visual Studio Code extension to run Mythril analysis for Solidity files.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.89.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:mythril-vsc.analyze"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "mythril-vsc.analyze",
        "title": "Mythril-VSC: Analyze File"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "mythril-vsc.analyze",
          "when": "resourceLangId == solidity",
          "group": "navigation",
          "title": "Mythril-VSC: Analyze File"
        }
      ]
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.89.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.3.9"
  }
}
