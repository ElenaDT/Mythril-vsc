{
  "name": "mythril-vsc",
  "displayName": "Mythril-VSC",
  "description": "Visual Studio Code extension to run Mythril analysis for Solidity files.",
  "version": "0.0.1",
  "icon": "mythril-vsc.png",
  "engines": {
    "vscode": "^1.89.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "mythril-vsc.analyze",
        "title": "Mythril-VSC: Analyze File",
        "icon": {
          "light": "mythril-audit-light.svg",
          "dark": "mythril-audit-dark.svg"
        }
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "mythril-vsc.analyze",
          "group": "commands",
          "title": "Mythril-VSC: Analyze File"
        }
      ],
      "editor/title": [
        {
          "command": "mythril-vsc.analyze",
          "when": "resourceLangId == solidity",
          "group": "navigation",
          "title": "Mythril-VSC: Analyze File"
        }
      ]
    },
    "configuration": {
      "title": "Mythril-VSC",
      "properties": {
        "mythril-vsc.executionTimeout": {
          "type": "number",
          "default": 30,
          "description": "The execution timeout in seconds for Mythril analysis."
        }
      }
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.89.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.3.9"
  }
}
